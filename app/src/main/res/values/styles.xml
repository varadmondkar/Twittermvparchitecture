<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
    </style>

    <style name="TweetUserNameTextAppearance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">@font/helvetica_neue_medium</item>-->
    </style>

    <style name="TweetUserHandleTextAppearance" parent="TweetUserNameTextAppearance">
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
    </style>

    <style name="TweetTextContentTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
